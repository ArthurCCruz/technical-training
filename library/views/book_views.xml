<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_view_form_inherit" model="ir.ui.view">
        <field name="name">library.product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Book Data">
                    <group>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="publisher_id"/>
                        <field name="edition_date"/>
                        <field name="isbn"/>
                        <field name="loss_fee"/>
                    </group>
                    <group string="Book Copies">
                        <div class="o_row">
                            <field name="copy_ids"/>
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_product_view_search_inherit" model="ir.ui.view">
        <field name="name">library.product.product.search</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="name"/>
                <field name="author_ids"/>
                <field name="isbn"/>
            </field>
        </field>
    </record>

    <record id="copy_view_form" model="ir.ui.view">
        <field name="name">library.copy.form</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <form>
                <field name="book_id"/>
                <field name="isbn"/>
                <notebook>
                    <page string="Rentals" name="rentals">
                        <field name="rental_ids" readonly="1"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="copy_view_search" model="ir.ui.view">
        <field name="name">library.copy.search</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="book_id"/>
            </search>
        </field>
    </record>

    <record id="book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="copy_action" model="ir.actions.act_window">
        <field name="name">Book Copies</field>
        <field name="res_model">library.copy</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>