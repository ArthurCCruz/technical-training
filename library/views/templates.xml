<odoo>
    <template id="books_list">
        <t t-call="website.layout">
            <h1>Books List</h1>
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Authors</th>
                    <th>Available Copies</th>
                    <th>Number of Copies</th>
                </tr>
                <tr t-foreach="books" t-as="book">
                    
                    <td><a t-attf-href="/books/{{ book.id }}"><span t-field="book.name"></span></a></td>
                    <td><span t-field="book.author_ids"></span></td>
                    <td><div class="text-right" t-esc="len(book.copy_ids.filtered(lambda c: c.book_state == 'available'))"></div></td>
                    <td><div class="text-right" t-esc="len(book.copy_ids)"></div></td>
                    
                </tr>
            </table>
        </t>
    </template>

    <template id="copies_table">
        <t t-set="logged_user" t-value="not request.env.user == website.user_id"/>
        <table class="table table-bordered">
            <tr>
                <th>Reference</th>
                <th>Status</th>
            </tr>
            <tr t-foreach="copies" t-as="copy">
                <td><span t-field="copy.reference"/></td>
                <td>
                    <span t-field="copy.book_state"/>
                    <a 
                        t-if="logged_user and copy.book_state =='available'"
                        class="btn btn-primary"
                        role="button"
                        t-attf-href="/rental?copy_id={{ copy.id }}"
                    >
                        Rent Now
                    </a>
                    <span t-if="not logged_user and copy.book_state =='available'">- Sign In to Rent</span>
                </td>
            </tr>
        </table>
    </template>

    <template id="book_view">
        <t t-call="website.layout">
            <h1 t-field="book.name"/>
            <div class="container">
                <div class="row">
                    <p>
                        <b>Authors: </b>
                    </p>
                    <ul>
                        <li t-foreach="book.author_ids" t-as="author">
                            <span t-field="author.name"/>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <p><b>Publisher: </b><span t-field="book.publisher_id"/></p>
                </div>
                <div class="row">
                    <p><b>Edition Date: </b><span t-field="book.edition_date"/></p>
                </div>
                <div class="row">
                    <p><b>ISBN: </b><span t-field="book.isbn"/></p>
                </div>
                <div class="row">
                    <p><b>Copies: </b></p>
                    <t t-call="library.copies_table">
                        <t t-set="copies" t-value="book.copy_ids"/>
                    </t>
                </div>
                
            </div>
        </t>
    </template>

    <template id="create_rental_view">
        <t t-call="website.layout">
            <div class="container">
                <form action="/rental" method="post" class="col-8 offset-2">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="copy_id" t-att-value="copy.id"/>
                    <div class="form-group">
                        <label for="book_title">Book Title</label>
                        <p name="book_title" id="book_title" type="text" class="form-control" t-field="copy.name"/>
                    </div>
                    <div class="form-group">
                        <label for="reference">Copy Reference</label>
                        <p name="reference" id="reference" type="text" class="form-control" t-field="copy.reference"/>
                    </div>
                    <div class="form-group">
                        <label for="return_date">Return Date</label>
                        <input name="return_date" id="return_date" type="text" class="form-control" required="1"/>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Rent Now
                    </button>
                </form>
            </div>
        </t>
    </template>

    <template id="successful_rental">
        <t t-call="website.layout">
            <div class="container">
                <h1>Success!</h1>
                <p>Your rental has been confirmed. Please come get your book.</p>
                <a 
                    class="btn btn-primary"
                    role="button"
                    t-attf-href="/books"
                >
                    See Other Books
                </a>
            </div>
        </t>
    </template>
</odoo>