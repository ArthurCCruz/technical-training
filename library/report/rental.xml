<odoo>
    <report 
        id="action_report_library_rental"
        string="Rentals List"
        model="library.rental" 
        report_type="qweb-pdf"
        file="library.report_library_rental" 
        name="library.report_library_rental"
    />

    <template id="report_library_rental">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <center>
                    <h2>
                        Rentals Report
                    </h2>
                </center>
                <div class="page">
                    <div>
                        <b>Report date: </b>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y %H:%M')"/>
                    </div>

                    <table class="table table-bordered">
                        <tr>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Book</th>
                            <th>Return Date</th>
                        </tr>
                        <tr t-foreach="docs" t-as="rental">
                            <td><span t-field="rental.customer_id.name"/></td>
                            <td><span t-field="rental.customer_email"/></td>
                            <td><span t-field="rental.book_id.name"/></td>
                            <td><span t-field="rental.return_date"/></td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>