<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_rental_form" model="ir.ui.view">
        <field name="name">create.rental.form</field>
        <field name="model">create.rental.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="rental_date"/>
                    <field name="return_date"/>
                </group>
                <footer>
                    <button string="Submit" name="button_submit" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_rental" model="ir.actions.act_window">
        <field name="name">Create Rental</field>
        <field name="res_model">create.rental.wiz</field>
        <field name="view_mode">form</field>
        <field name="context">{
            'default_copy_ids': active_ids
        }</field>
        <field name="binding_model_id" ref="library.model_library_copy"/>
        <field name="target">new</field>
    </record>
</odoo>
