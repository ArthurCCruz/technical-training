<odoo>
    <record id="menu_courses" model="website.menu">
        <field name="name">Courses</field>
        <field name="url">/courses</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>
    <template id="website_courses_list">
        <t t-call="website.layout">
            <div class="container">
                <h1>Courses List</h1>
                <table class="table table-bordered">
                    <tr>
                        <th>Course Name</th>
                        <th>Responsable</th>
                        <th>Level</th>
                        <th>Price</th>
                    </tr>
                    <t t-foreach="courses" t-as="course">
                        <tr>
                            <td><span t-field="course.name"></span></td>
                            <td><span t-field="course.responsible_id"></span></td>
                            <td><span t-field="course.level"></span></td>
                            <td><span t-field="course.price"></span></td>
                            <td>
                                <a 
                                    class="btn btn-primary"
                                    role="button"
                                    t-attf-href="/courses/{{ course.id }}"
                                >
                                    Details
                                </a>
                                <a 
                                    class="btn btn-primary"
                                    role="button"
                                    t-attf-href="/courses/{{ course.id }}/sessions"
                                >
                                    Session List
                                </a>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>

    <template id="website_course_details">
        <t t-call="website.layout">
            <div class="container">
                <h1 t-field="course.name"/>
                <div class="row offset-1">
                    <p><b>Description: </b><span t-field="course.description"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Responsable: </b><span t-field="course.responsible_id"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Level: </b><span t-field="course.level"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Attendees: </b><span t-field="course.attendee_count"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Price: </b><span t-field="course.price"/></p>
                </div>
                <div class="row offset-1">
                    <a 
                        class="btn btn-primary"
                        role="button"
                        t-attf-href="/courses/{{ course.id }}/sessions"
                    >
                        Session List
                    </a>
                </div>
                
            </div>
        </t>
    </template>

    <record id="menu_sessions" model="website.menu">
        <field name="name">Session</field>
        <field name="url">/sessions</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>
    <template id="website_sessions_list">
        <t t-call="website.layout">
            <div class="container">
                <h1>Sessions List</h1>
                <table class="table table-bordered">
                    <tr>
                        <th>Course Name</th>
                        <th>Instructor</th>
                        <th>Start Date</th>
                        <th>State</th>
                    </tr>
                    <t t-foreach="sessions" t-as="session">
                        <tr>
                            <td><span t-field="session.name"></span></td>
                            <td><span t-field="session.instructor_id"></span></td>
                            <td><span t-field="session.start_date"></span></td>
                            <td><span t-field="session.state"></span></td>
                            <td>
                                <a 
                                    class="btn btn-primary"
                                    role="button"
                                    t-attf-href="/sessions/{{ session.id }}/"
                                >
                                    Details
                                </a>
                                <a 
                                    class="btn btn-primary"
                                    role="button"
                                    t-attf-href="/courses/{{ session.course_id.id }}/"
                                >
                                    See Course
                                </a>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>

    <template id="website_session_details">
        <t t-call="website.layout">
            <div class="container">
                <h1 t-field="session.name"/>
                <div class="row offset-1">
                    <p><b>Description: </b><span t-field="session.description"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Instructor: </b><span t-field="session.instructor_id"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Level: </b><span t-field="session.level"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Seats Taken: </b> <span t-field="session.taken_seats"/> / <span t-field="session.seats"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Start Date: </b><span t-field="session.start_date"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>End Date: </b><span t-field="session.end_date"/></p>
                </div>
                <div class="row offset-1">
                    <p><b>Duration: </b><span t-field="session.duration"/></p>
                </div>
                <div class="row offset-1">
                    <a 
                        class="btn btn-primary"
                        role="button"
                        t-attf-href="/courses/{{ session.course_id.id }}"
                    >
                        Go to Course
                    </a>
                </div>
                
            </div>
        </t>
    </template>
</odoo>