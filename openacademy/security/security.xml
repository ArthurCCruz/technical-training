<odoo>
    <record model="ir.module.category" id="oa_group_category">
        <field name="name">Open Academy</field>
    </record>
    
    <record id="group_oa_students" model="res.groups">
        <field name="name">Students</field>
        <field name="category_id" ref="openacademy.oa_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('base.group_user')])]"/>
    </record>

    <record id="group_oa_maesters" model="res.groups">
        <field name="name">Maesters</field>
        <field name="category_id" ref="openacademy.oa_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('group_oa_students')])]"/>
    </record>

    <record id="group_oa_archmaesters" model="res.groups">
        <field name="name">Archmaesters</field>
        <field name="category_id" ref="openacademy.oa_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('group_oa_maesters')])]"/>
    </record>

    <record id="rule_maesters_course" model="ir.rule">
       <field name="name">Responsable Maester can Edit Course</field>
            <field name="model_id" ref="model_openacademy_course"/>
            <field name="groups" eval="[(4, ref('openacademy.group_oa_maesters'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/> 
            <field name="domain_force">
                [('responsible_id','=',user.id)]
            </field>
    </record>

    <record id="rule_archmaesters_course" model="ir.rule">
       <field name="name">Archmaesters can Edit Course</field>
            <field name="model_id" ref="model_openacademy_course"/>
            <field name="groups" eval="[(4, ref('openacademy.group_oa_maesters'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/> 
            <field name="domain_force">
                [(1,'=',1)]
            </field>
    </record>
</odoo>